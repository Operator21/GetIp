<Window x:Class="GetIP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetIP"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FF555555">
        <Label HorizontalAlignment="Center" Margin="0,30,0,0" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="24" Foreground="White">IP Spy</Label>
        <TextBox x:Name="Result" HorizontalAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Width="200" Height="40">
        </TextBox>
        <Button x:Name="getid_btn" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0" Width="100" Height="40" Click="getid_btn_Click">GIMME IP</Button>
    </Grid>
</Window>
